<head>
    <link rel="stylesheet" href="style/main.css">
    <link rel="stylesheet" href="style/register.css">
</head>
<body>
    <br /><br />

        <div class="row d-flex justify-content-center">
            <div class="register">
                <h1 class="text-primary">Register</h1>
                <div class="register-box">
                    <form action="/registeruser" class="register-form center" method="post">
                        <label for="username">Username</label>
                        <input required type="text" name="username" id="username">
                        <label for="email">Email</label>
                        <input required type="email" name="email" id="email">
                        <label for="password1">Password</label>
                        <input required type="password" name="password1" id="password1">
                        <label for="password2">Confirm Password</label>
                        <input required type="password" name="password2" id="password2">
                        {{#if locals.msg}}
                            <div class="alert alert-danger" role="alert">{{locals.msg}}</div>
                        {{/if}}
                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>
                </div>
                <div class="text-center">
                    <a href="/login" class="link-primary">Already have an account?</a>
                </div>
                
            </div>
        </div>


    </div>

    </body>
