<div class="container-search">

    <br /><br />
    {{#results}}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/schoolsearch">Search For Schools</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{this.sname}}</li>
        </ol>
    </nav>


    <h1>{{this.sname}}</h1>
    <h4>{{this.city}}, {{this.state}}</h4>

    <br />
    <table class="table table-hover">
  <thead class = "thead-light">
    <tr>
      <th scope="col">Building</th>
      <th scope="col">Room Number</th>
      <th scope="col">Address</th>
      <th scope="col">Fits</th>
    </tr>
  </thead>
  <tbody>
{{/results}}
    {{#rooms}}
    <tr onclick=
"window.location='/'" > 
      <td>{{this.bname}}</td>
      <td>{{this.rno}}</td>
      <td>{{this.address}}</td>
      <td>{{this.fits}}</td>
      
    </tr>
    {{/rooms}}
    {{#results}}
  </tbody>
</table>
    <br /><br />



    <div class="row">
        <div class="col">
            <h1 style="font-size: 3em;">Average Rating:</h1>

            <input class="rating" max="5" readonly {{!--
                oninput="this.style.setProperty('--value', `${this.valueAsNumber}`)" --}} step="0.5"
                style="--value:{{this.avg_rating}}" type="range" value="{{this.avg_rating}}">
            </label>


        </div>
        <div class="col">
            <h1 style="font-size: 3em">Number of Rooms:</h1>

            <h2 style="font-size: 3em;">{{this.numrooms}}</h2>

            <div class="d-grid gap-2 col-4 px-0">
                <a href="/{{this.sid}}/addstudyroom" type="button" class="btn btn-primary">Add Study Room &nbsp;&nbsp;<i class="fa-solid fa-plus"></i></a>
            </div>

        </div>
    </div>

    {{/results}}
<br /> <br />
</div>